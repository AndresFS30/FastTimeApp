        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/dark_pruple"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:id="@+id/ll_envio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
